<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.plana.activity.ForgetPwdActivity">
    <include
        layout="@layout/tool_bar"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_zcshouji"
            />
        <EditText
            android:id="@+id/et_phone"
            style="@style/text_content_black"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入手机号"
            android:background="@null"
            android:inputType="phone"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/haveing"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_zcyanzheng"
            />
        <EditText
            android:id="@+id/et_auth"
            style="@style/text_content_black"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入手机号验证码"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_auth"
            style="@style/Auth_code"
            android:text="验证码"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/haveing"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_pwd"
            style="@style/text_content_black"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入新密码"

            android:maxLength="6"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/haveing"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_affpwd"
            style="@style/text_content_black"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacebetween"
            android:layout_weight="1"
            android:maxLength="6"
            android:background="@null"
            android:hint="请再次输入您的密码"
            android:inputType="numberPassword"

            />


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/haveing"
        />

        <Button
            android:id="@+id/btn_submit"
           style="@style/Buton_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="确认修改"
            />
</LinearLayout>
