<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.plana.activity.WxGatherActivity">
    <include
        layout="@layout/tool_bar"
        />
        <TextView
            style="@style/text_content_black"
            android:layout_marginTop="30dp"
            android:text="微信扫一扫转账"
            android:layout_gravity="center_horizontal"
            />
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:src="@mipmap/icon_shangchuan"
                android:layout_height="120dp"
                />
    <TextView
        android:id="@+id/tv_change"
        style="@style/text_content_black"
        android:layout_marginTop="30dp"
        android:text="修改微信收款码"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btm_submit"
        style="@style/Buton_style"
        android:layout_marginTop="20dp"
        android:text="确认提交"
         />
        <TextView
            style="@style/text_content_gary"
            android:padding="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="微信收款码如何查找？\n微信--点击右上角“+”--收款码--我要收款\n注请不要设置收款金额"
            />
</LinearLayout>
