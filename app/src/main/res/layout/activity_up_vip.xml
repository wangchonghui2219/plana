<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.plana.activity.UpVipCenterActivity">
    <include
        layout="@layout/tool_bar"
        />

    <LinearLayout
        android:id="@+id/ll_upcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/theme" />

        <TextView
            style="@style/text_content_black"
            android:layout_marginLeft="10dp"
            android:text="￥"
            android:textColor="@color/theme" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/text_content_black"
            android:text="600"
            android:textColor="@color/theme"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@color/theme"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_content_white"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="价值600元抵用券一张"

                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_code"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <TextView
           style="@style/text_content_gary"
            android:text="邀请码"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:padding="3dp"
            android:textSize="13sp"
            android:hint="请输入邀请人的邀请码"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_editext_bg_gary"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            style="@style/text_content_black"
            android:text="金额："
             />
       <TextView
           android:id="@+id/tv_price"
           style="@style/text_content_black"
           android:text="￥990"
           android:textColor="@color/red"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            style="@style/text_content_black"
            android:text="我已经阅读并同意"
            />
        <TextView
            android:id="@+id/tv_protocol"
            style="@style/text_content_black"
            android:text="《服务使用协议》"
            android:textColor="@color/theme"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:background="@color/theme"
        android:id="@+id/btn_submit"
        />
</LinearLayout>
