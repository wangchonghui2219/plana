<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_product_pic"
            >
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_margin="3dp"
                style="@style/item_pic_size_"
                android:src="@mipmap/icon_xiaoxi"
                android:scaleType="fitXY"
                />

        </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_title"
                    android:text="白衬衫女长袖职业2017春装新款韩版修身OL正装工作服工装白色衬衣"
                   style="@style/text_content_black"
                    android:maxLines="2"
                    android:lines="2"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/text_content_gary_"
                        android:textColor="@color/theme"
                        android:id="@+id/tv_price"
                        android:layout_weight="1"
                        android:text="￥12"
                         />
                    <TextView

                        style="@style/text_content_gary_"
                        android:id="@+id/tv_sale"
                        android:layout_weight="2"
                        android:text="月销25550"
                         />

                </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginRight="5dp"
                       android:background="@mipmap/icon_juanma"
                       android:gravity="center_horizontal"
                       >
                       <TextView
                          style="@style/text_content_gary"
                            android:textSize="12sp"
                           android:visibility="gone"
                           android:text="用券立减"
                           />
                       <TextView
                           android:id="@+id/tv_code"
                          android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/theme"
                           android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                           android:text="10元"
                           />

                   </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_share"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    style="@style/image_pic_size_big"
                    android:src="@mipmap/icon_fenxiang"
                     />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:layout_gravity="center_horizontal"
                    android:textSize="11sp"
                    android:textColor="@color/theme"
                    />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>