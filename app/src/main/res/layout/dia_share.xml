<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            style="@style/text_content_black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="分享到"
            />
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_QQ"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <ImageView
                   style="@style/item_pic_size_share"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_fxqq"
                    />
            <TextView
                android:layout_marginTop="3dp"
               style="@style/text_content_black"
                android:text="QQ"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
             android:id="@+id/ll_Zone"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <ImageView
                   style="@style/item_pic_size_share"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_fgkongjian"
                    />
            <TextView
                android:layout_marginTop="3dp"
               style="@style/text_content_black"
                android:layout_marginLeft="0dp"
                android:text="空间"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
         <LinearLayout
             android:id="@+id/ll_pyq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <ImageView
                   style="@style/item_pic_size_share"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_fxpengyou"
                    />
            <TextView
                android:layout_marginTop="3dp"
               style="@style/text_content_black"
                android:text="朋友圈"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
         <LinearLayout
             android:id="@+id/ll_Wx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <ImageView
                   style="@style/item_pic_size_share"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_fxweixin"
                    />
            <TextView
                android:layout_marginTop="3dp"
               style="@style/text_content_black"
                android:text="微信"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>