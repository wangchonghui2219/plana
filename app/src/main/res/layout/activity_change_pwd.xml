<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <include
        layout="@layout/tool_bar"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_oldpwd"
            android:padding="5dp"

            style="@style/text_content_black"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入原密码"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        style="@style/haveing"
        />
<LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_newpwd"
            android:padding="5dp"
            style="@style/text_content_black"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        style="@style/haveing"
        />
<LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/image_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_affpwd"
            style="@style/text_content_black"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请再次输入原密码"
            android:background="@null"
            android:padding="5dp"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        style="@style/haveing"
        />
        <Button
            android:id="@+id/btn_submit"
            style="@style/Buton_style"
            android:text="确认修改"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="13sp"

            />
</LinearLayout>
